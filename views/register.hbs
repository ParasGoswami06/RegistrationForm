</head>
<body>
    <div id="main">
        <div id="formdiv">
            <div id="anim">
                <h2>REGISTRATION</h2>
            </div>
            <div id="datadiv">
                <form action="/register" id="form" method="POST">
                    <input type="text" placeholder="First Name" name="firstname">
                    <input type="text" placeholder="Last Name" name="lastname"> <br>
                    <legend>
                        <input type="radio" name="gender" id="gender" value="Male">Male
                        <input type="radio" name="gender" id="gender" value="Female">Female
                    </legend>
                    <input type="text" name="email" id="" placeholder="Email">
                    <input type="text" name="mobile" id="" placeholder="Mobile"><br>
                    <input type="text" placeholder="State" name="state">
                    <input type="text" placeholder="City" name="city"><br>
                    <input type="text" name="address" id="" placeholder="Address">
                    <input type="text" name="age" id="" placeholder="Age"><br>
                    <input type="password" name="password" id="" placeholder="Password">
                    <input type="password" name="confirmpassword" id="" placeholder="Confirm Password"><br>
                    <input type="submit" value="Register" id="submit">
                </form>
            </div>
            <div id="log"><span>Already Registered? <a href="./login">Login</a></span></div>
        </div>
    </div>
</body>
</html>